root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.coffee,*.less]
indent_size = 2

[*.{js,ts,tsx,css,scss,sass}]
indent_size = 2

[*.{html,xml}]
indent_size = 2

[*.{json,jsonnet,libsonnet,yml,yaml}]
indent_size = 2

[*.tsv]
indent_style = tab

[Makefile]
indent_style = tab
